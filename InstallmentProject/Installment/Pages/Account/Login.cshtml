@page "/"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@{
    Layout = null;
}

<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .login-container {
        background-color: #ffffff;
        border-radius: 5px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
        padding: 20px;
        width: 350px;
        text-align: center;
    }

    h1 {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 16px;
        color: #555;
        font-weight: bold;
        display: block;
        text-align: left;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #f79131;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        font-size: 16px;
        cursor: pointer;
    }

    a {
        color: #f79131;
        text-decoration: none;
        cursor: pointer;
    }

        a:hover {
            color: #da6a00;
            text-decoration: none;
            cursor: pointer;
        }

        .btn-primary:hover {
        background-color: #da6a00
        }

    .forgot-password {
        font-size: 14px;
        color: #f79131;
        margin-top: 10px;
        text-align: right;
    }

    .create-account {
        font-size: 14px;
        color: #f79131;
        margin-top: 10px;
        text-align: center;
    }

    
</style>
<head>
<link rel="stylesheet" href="~/css/styles.css" />
</head>
<div class="login-container">
    <img src="~/assets/images/logo.png" style="width:25%; height:15%;"/>
    <h1>Installment Planner</h1>

    <form class="forms-sample" id="account" method="post">
        
        <div class="form-group">
            <label for="Input.Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="user.Email" id="Input.Email" placeholder="Email address" required>
            <span asp-validation-for="user.Email" class="text-danger"></span>
            <div class="forgot-password">
                <a asp-page="./ForgotEmail" action="./ForgotEmail">Forgot Email?</a>
            </div>
        </div>

        <div class="form-group">
            <label for="Input.Password" class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="user.Password" id="Input.Password" autocomplete="new-password" placeholder="Password" required>
            <span asp-validation-for="user.Password" class="text-danger"></span>
            <div class="forgot-password">
                <a asp-page="./ForgotPassword" action="./ForgotPassword">Forgot password?</a>
            </div>
        </div>

        <button id="registerSubmit" type="submit" class="btn btn-primary ">Sign In</button>
    </form>

   

    <div class="create-account">
        <a asp-page="./Register" action="./Register">Create an account</a>
    </div>
</div>
