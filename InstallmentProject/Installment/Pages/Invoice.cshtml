@page "{Id:int}/{CompanyId:int}"
@model Installment.Pages.InvoiceModel
@{
    int seriesNumber = 1; // Initialize the series number
}

<style>
    /* Style for the entire invoice container */
    .invoice-container {
        width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
    }

    /* Style for the company logo */
    .logo {
        text-align: center;
    }

    /* Style for the invoice table */
    .invoice-table {
        width: 100%;
        border-collapse: collapse;
    }

        /* Style for table header */
        .invoice-table th {
            background-color: #f2f2f2;
        }

        /* Style for table cells */
        .invoice-table td, .invoice-table th {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: left;
        }

    /* Style for the colored rows */
    .colored-row {
        background-color: #f5f5f5;
    }

    /* Style for the Export Invoice button */
    .export-button {
        float: right;
        margin-top: 10px;
    }
</style>

<div class="invoice-container">
    <div class="logo">
        @if (@Model.Companies.LogoImage != null)
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(@Model.Companies.LogoImage)" alt="Company Logo" />
        }
        else
        {
            <p>No logo available</p>
        }
    </div>

    <table class="invoice-table">
        <tbody>
            <tr>
                <td>Invoice#</td>
                <td>@(seriesNumber++)</td>
            </tr>
            <tr>
                <td>Company Name</td>
                <td>@Model.Companies.CompanyName</td>
            </tr>

            <tr>
                <td>Phone#</td>
                <td>@Model.Companies.Phone</td>
            </tr>
            
            <tr>
                <td>Email</td>
                <td>@Model.Companies.Email</td>
            </tr>
            <tr>
                <td>Address</td>
                <td>@Model.Companies.Address</td>
            </tr>
        </tbody>
    </table>

    <h2>Invoice Details</h2>
    <table class="invoice-table">
        <tbody>
            <tr>
                <td>Product Name</td>
                <td>@Model.plans.ProductName</td>
            </tr>
            <tr>
                <td>Client Name</td>
                <td>@Model.plans.ClientName</td>
            </tr>
            <tr>
                <td>Advance Payment</td>
                <td>@Model.plans.AdvancePayment</td>
            </tr>
            <tr>
                <td>Installments Paid</td>
                <td>@Model.installmentPlans.NoInstallments</td>
            </tr>
        </tbody>
    </table>

    <h2>Payment History</h2>
    <table class="invoice-table">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model.InstallmentPayments)
            {
                <tr>
                    <td>@payment.RecentAmount</td>
                    <td>@payment.Date.ToShortDateString()</td>
                    <td>@payment.Status</td>
                </tr>
            }
        </tbody>
    </table>

    <table class="invoice-table">
        <tbody>
            <tr class="colored-row">
                <td>Total Price</td>
                <td>@Model.plans.TotalPrice</td>
            </tr>
            <tr class="colored-row">
                <td>Total Paid</td>
                <td>@Model.installmentPlans.TotalPaid</td>
            </tr>
            <tr class="colored-row">
                <td>Remaining Amount</td>
                <td>@Model.installmentPlans.RemainingAmount</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-primary export-button"
            onclick="exportInvoice(@Model.plans.Id, @Model.plans.CompanyId)">
        Export Invoice
    </button>
</div>
