@page 
@model Installment.Pages.InstallmentPayments.AddModel
@{
}
<form method="post" asp-page-handler="OnPostAsync">
    <input type="hidden" asp-for="InstallmentPlanId" />
    <div class="form-group">
        <label asp-for="payments.RecentAmount">Amount</label>
        <input type="text" class="form-control"  asp-for="payments.RecentAmount">
    </div>
    <div class="form-group">
        <label asp-for="payments.Date">Date</label>
        <input type="date" class="form-control"  asp-for="payments.Date">
    </div>
    <div class="form-group">
        <label asp-for="payments.Status">Status</label>
        <input type="text" class="form-control"  asp-for="payments.Status">
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Add Payment</button>
</form>