@page
@model Installment.Pages.Manage.Product.EditModel

<h2>Edit Product</h2>

<form method="post">
    <input type="hidden" asp-for="Product.ProductId" />
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Product.Name">
    </div>
    <div class="form-group">
        <label for="Price">Product Price</label>
        <input type="text" class="form-control" id="Price" asp-for="Product.Price">
    </div>
    <div class="form-group">
        <label for="Description">Product Description</label>
        <textarea class="form-control" id="Description" asp-for="Product.Description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="./ProductIndex" class="btn btn-secondary">Back to List</a>
</form>
