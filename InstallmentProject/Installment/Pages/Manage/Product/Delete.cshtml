@page
@model Installment.Pages.Manage.Product.DeleteModel

<h2>Delete Product</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Name
        </dd>
        <dt class="col-sm-2">
            Product Price
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Price
        </dd>
        <dt class="col-sm-2">
            Product Description
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Description
        </dd>
    </dl>
</div>

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="./ProductIndex" class="btn btn-secondary">Back to List</a>
</form>

