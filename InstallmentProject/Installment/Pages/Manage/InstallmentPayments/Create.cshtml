@page
@model Installment.Pages.Manage.InstallmentPayments.CreateModel
@{
}
<form method="POST" asp-page-handler="Create">
    <div class="form-group">
        <label asp-for="Payment.InstallmentPlan.InstallmentPlanId">Installment Plan</label>
        <select asp-for="Payment.InstallmentPlan.InstallmentPlanId" asp-items="@(new SelectList(Model.InstallmentPlans, "InstallmentPlanId", "AdvancePayment"))" class="form-control">
            <option value="">Select an Installment Plan</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Payment.PaymentDate">PaymentDate</label>
        <input asp-for="Payment.PaymentDate" class="form-control" />
        <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Payment.Amount">Amount</label>
        <input asp-for="Payment.Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Payment.Status">Status</label>
        <input asp-for="Payment.Status" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>