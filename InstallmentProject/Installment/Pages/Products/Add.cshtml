@page
@model Installment.Pages.Products.AddModel
@{
}
<form method="post">
    <div class="form-group">
        <label asp-for="product.Name">Product Name</label>
        <input type="text" class="form-control"  asp-for="product.Name">
    </div>
    <div class="form-group">
        <label asp-for="product.OriginalPrice">Product Price</label>
        <input type="number" class="form-control" asp-for="product.OriginalPrice" >
    </div>
   
    <div class="form-group">
        <label asp-for="product.Qty">Product Quantity</label>
        <input type="number" class="form-control" asp-for="product.Qty" >
    </div>
    <div class=“form-group”>
        <label asp-for="product.CompanyName">Select a Company</label>
        <select class="form-control" asp-for="product.CompanyName" asp-items="@Model.CompanyItems">
            <option value=“”>Select a Company </option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="product.Description">Product Description</label>
        <input type="text" class="form-control" id="Description" asp-for="product.Description">
    </div>
    
    <br />
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>