@page "{id:int}"
@model Installment.Pages.Companies.EditModel
@{
}
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="CompanyName">Company Name</label>
        <input type="text" class="form-control" id="CompanyName" name="CompanyName" asp-for="company.CompanyName">
    </div>
    <div class="form-group">
        <label for=" Email">Company Email</label>
        <input type="text" class="form-control" id="Email" name="Email" asp-for="company.Email">
    </div>
    <div class="form-group">
        <label for="Phone">Company PhoneNo</label>
        <input type="number" class="form-control" id="Phone" name="Phone" asp-for="company.Phone">
    </div>
    <div class="form-group">
        <label for="Address">Company Address</label>
        <input type="text" class="form-control" id="Address" name="Address" asp-for="company.Address">
    </div>
    <div class="form-group">
        <label for="LogoImage">Company Logo</label>
        <img src="data:image/png;base64,company.LogoImage" alt="Company Logo" style="width: 100px; height: auto;" />
        <input type="file" class="form-control" id="LogoImage" asp-for="LogoImageFile">
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>