@page
@model Installment.Pages.InstallmentPlans.IndexModel
@{
}
<h1>Plans List</h1>


<a asp-page="./Add" class="ml-auto" style="display: flex;
        justify-content:end;
        align-items: center;">
    <button type="submit" class="icon-button">
        <i data-feather="plus-circle"></i>
        Add Plan
    </button>
</a>


<style>
    .icon-button {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        margin: 0;
        font-size: 16px; /* Adjust the font size to control the size of the icon */
        color: var(--bs-primary); /* Adjust the color as needed */
    }

        .icon-button:focus {
            outline: none;
        }
</style>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Client</th>
            <th>Price</th>
            <th>Advance</th>
            <th>Installments</th>
            <th>Paid</th>
            <th>Remaining</th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plan in Model.plans)
        {
            <tr>
                <td>@plan.ProductName</td>
                <td>@plan.ClientName</td>
                <td>@plan.TotalPrice</td>
                <td>@plan.AdvancePayment</td>
                <td>@plan.NoInstallments</td>
                <td>@plan.TotalPaid</td>
                <td>@plan.RemainingAmount</td>
                
                <td>
                    <div class="row">
                        <div class="col-md-2">
                            <form method="post" asp-page-handler="Delete" asp-route-id="@plan.Id">
                                <button type="submit" class="icon-button">
                                    <i data-feather="trash-2"></i>
                                </button>
                            </form>
                        </div>
                        
                    
                    
                        <div class="col-md-2">
                            <a asp-page="./Edit" asp-page-handler="Update" asp-route-id="@plan.Id">
                                <button type="submit" class="icon-button">
                                    <i data-feather="edit-2"></i>
                                </button>
                            </a>
                        </div>
                        <div class="col-md-8">
                            <a asp-page="/InstallmentPayments/Index" asp-route-InstallmentPlanId="@plan.Id" class="btn btn-primary btn-sm">
                                View Payment
                            </a>
                        </div>
                        
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

