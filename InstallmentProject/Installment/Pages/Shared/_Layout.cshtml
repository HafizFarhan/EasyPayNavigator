@using Newtonsoft.Json;


<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>@ViewData["Title"] - Installment</title>
    @await Html.PartialAsync("~/Pages/Shared/PartialViews/Styles.cshtml")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
</head>
<body>
    <!-- Custom overlay -->
     <div class="custom-overlay" id="customOverlay"></div>
    <!-- End of Custom overlay -->

    <!-- Top notification div -->
    <div class="alert-container" id="topNotifications"> </div>
    <!-- End top notification div -->

    <div class="main-wrapper">
        @await Html.PartialAsync("~/Pages/Shared/PartialViews/LeftMenu.cshtml")
        <div class="page-wrapper">
            @await Html.PartialAsync("~/Pages/Shared/PartialViews/TopNavBar.cshtml")
            <div class="page-content">
                @RenderBody()
            </div>
            @await Html.PartialAsync("~/Pages/Shared/PartialViews/Footer.cshtml")
        </div>
    </div>

    @await Html.PartialAsync("~/Pages/Shared/PartialViews/Scripts.cshtml")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
